{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        //https://learn.coderslang.com/0023-eslint-disable-for-specific-lines-files-and-folders/#:~:text=To%20turn%20off%20ESLint%20in,only%20files%20but%20directories%20too.
        "quotes": ["error", "double", {"avoidEscape": true}],
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "comma-dangle": "off",
        "class-methods-use-this": "off",
        "no-console": "off",
        "import/first": "off",
        "camelcase": ["error", {"ignoreDestructuring": true}] //https://eslint.org/docs/latest/rules/camelcase
    }
}
